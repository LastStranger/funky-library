{
  "compilerOptions": {
//    "target": "ES5",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react", // 帮助识别jsx语法
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
//    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node", // 用node这个算法解析import语法
    "emitDeclarationOnly": true, // 只生成声明文件,不对ts文件进行编译
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true // 强制文件名大小写一致
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/stories"
  ]
}
